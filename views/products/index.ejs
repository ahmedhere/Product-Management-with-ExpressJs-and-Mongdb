<%- include('../HOC/head.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-between">
            <h1>
                All Products
            </h1>
                <a href="/products/new" type="button" class="btn btn-outline-primary m-2">Add new Product</a>
        </div>
    </div>
    <div class="row p-2 bg-info mt-4 text-center">
        <div class="col-6 h3">
            Name
        </div>
        <div class="col h3">
            Price
        </div>
        <div class="col h3">
            Category
        </div>
        <div class="col h3">
            More Info
        </div>
    </div>

    <% for(let product of products ) { %>
        <div class="row p-2 border shadow mt-2 text-center">
            <div class="col-6">
                <%= product.name %>
            </div>
            <div class="col">
                $ <%= product.price %>
            </div>
            <div class="col">
                <%= product.category %>
            </div>
            <div class="col">
                <a href="/products/<%= product._id %>" class="btn btn-info">Details</a>
            </div>
        </div>
    <% } %>
</div>

